<h1>New Company Profile</h1>

<%= form_for @client do |f| %>
	<% if @client.errors.any? %>
		<h2><%= pluralize(@client.errors.count, "error")  %> prohibited this article from being saved:</h2>
    	<% @client.errors.full_messages.each do |msg| %>
      		<li><%= msg %></li>
    	<% end %>		
    <% end %>
<br/>
  
  	<%= f.fields_for :user_attributes, @client.user do |t| %>
  		<div>	
  			<%= t.label :email %><br/>
  			<%= t.email_field :email %>
  		</div>
  		<div>
			<%= t.label :password %><br/>
			<%= t.password_field :password %>
		</div>

		<div>
			<%= t.label :password_confirmation %><br/>
			<%= t.password_field :password_confirmation %>
		</div>
  	<% end %>

    <div>
    	<%= f.label :name %><br/>
    	<%= f.text_field :name %>
	</div>

	<div>
		<%= f.label :address %><br/>
    	<%= f.text_field :address %>
	</div>
	<div>
		<%= f.label :address_2 %><br/>
    	<%= f.text_field :address_2 %>
	</div>
	<div>
		<%= f.label :city %><br/>
    	<%= f.text_field :city %>
	</div>
	<div>
		<%= f.label :state_id %><br/>
    	<%= f.select :state_id, State.for_select %>
	</div>
	<div>
		<%= f.label :zip_code %><br/>
    	<%= f.text_field :zip_code %>
	</div>

	<div>
		<%= f.label :phone %><br/>
		<%= f.text_field :phone %>
	</div>

	<div>
		<%= f.label :category_id %>
		<%= f.select :category_id, Category.for_select, include_blank: true %>
	</div>

	<div>
		<%= f.label :description %><br/>
		<%= f.text_area :description %>
	</div>
	
	<div>
		<%= f.submit %>
	</div>

<% end %>